{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "noFallthroughCasesInSwitch": true,

    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,

    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "lib": [ "es2017", "dom" ],

    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@bizappframework/*": [ "modules/*" ]
    },
    "outDir": "./dist"
  }
}